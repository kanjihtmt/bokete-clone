#= require jquery.raty
$ ->
  $('.boke-rate').raty
    cancel: true
    number: 3
    cancelOff: '<%= image_path('cancel-off.png') %>'
    cancelOn : '<%= image_path('cancel-on.png') %>'
    starHalf : '<%= image_path('star-half.png') %>'
    starOff  : '<%= image_path('star-off.png') %>'
    starOn   : '<%= image_path('star-on.png') %>'
    click: (score, event) ->
      if score > 0
        $('.js-show-comment').show()
        alert score + ':' + $(this).data('id')
      else
        $('.js-show-comment').hide()
        $('.comment-area').hide()
    score: ->
      $(this).data('score')

  $('.js-show-comment').click ->
    $(this).hide()
    $('.comment-area').show()
