.text-center
  .btn-group.list-inline.category-tab-menu
    %li.btn{class: !params[:category].present? ? 'active' : ''}
      = link_to '全カテゴリ', send("#{category_type}s_path", tab: params[:tab])
    - Category.send(category_type).each do |category|
      %li.btn{class: category.id.to_s == params[:category] ? 'active' : ''}
        = link_to category.name, send("#{category_type}s_path", tab: params[:tab], category: category.id)
