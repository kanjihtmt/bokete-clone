- breadcrumb breadcrumbs_for_bokes(params[:tab])

.row
  .col-md-8
    = render 'theme_tabs'
    .wrapper.clearfix
      #masonry-container.theme
        - @themes.each do |theme|
          .mas-box.pin.clearfix
            .theme-inner
              %h3
                = link_to '5 個のボケ', theme_path(theme)
              .theme-photo-wrapper
                = link_to "/bokes/#{theme.id}/new" do
                  = image_tag theme.image_url
              .theme-meta
                = link_to member_path(theme.user) do
                  %i.fa.fa-camera{title: 'photo by'}
                  = theme.user.try(:nickname)
                &nbsp;
                = link_to member_path(theme.user) do
                  %i.fa.fa-picture-o{title: 'odai by'}
                  = theme.user.try(:nickname)

  .col-md-4
    = render 'widget'

