- breadcrumb :accounts

.row
  .wrapper.col-md-9
    %h2 メールアドレスの変更
    .horizontal-form-wapper
      = simple_form_for @user, url: accounts_path do |f|
        = f.error_notification
        .form-group.clearfix
          = f.label :email, '新しいメールアドレス', class: 'col-sm-2 text-right'
          .col-sm-8
            = f.input_field :email, class: 'form-control'

        .form-actions.text-center
          = f.button :submit, "更新", class: 'btn btn-warning'
  .col-md-3
    右サイドナビ

